// Add inject.js
(function addScript () {
  if (!document.head) return setTimeout(addScript, 50);
  var scriptElement = document.createElement('script');
  scriptElement.type = 'text/javascript';
  scriptElement.src =  'https://localhost:8080/inject.js';
  document.head.appendChild(scriptElement);
})();
